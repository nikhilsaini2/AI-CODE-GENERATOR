# Environment Variables for Publishing Services

# Copy this file to .env in your frontend directory and add your API keys

# =============================================================================
# NETLIFY CONFIGURATION
# =============================================================================
# Get your Netlify API token from: https://app.netlify.com/user/applications/personal
REACT_APP_NETLIFY_API_TOKEN=your_netlify_token_here

# =============================================================================
# GITHUB CONFIGURATION  
# =============================================================================
# Get your GitHub token from: https://github.com/settings/tokens
# Required scopes: repo, public_repo
REACT_APP_GITHUB_TOKEN=your_github_token_here
REACT_APP_GITHUB_USERNAME=your_github_username

# =============================================================================
# VERCEL CONFIGURATION
# =============================================================================
# Get your Vercel token from: https://vercel.com/account/tokens
REACT_APP_VERCEL_TOKEN=your_vercel_token_here

# =============================================================================
# CUSTOM PUBLISH SERVICE
# =============================================================================
# If you want to use your own publishing service
REACT_APP_CUSTOM_PUBLISH_URL=https://your-publish-service.com/api

# =============================================================================
# FIREBASE HOSTING (Optional)
# =============================================================================
# Firebase project configuration
REACT_APP_FIREBASE_PROJECT_ID=your_firebase_project_id
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key

# =============================================================================
# GITHUB PAGES ALTERNATIVE - Using GitHub API
# =============================================================================
# Create a GitHub repository and use GitHub API for publishing
REACT_APP_GITHUB_REPO_TEMPLATE=ai-web-projects
